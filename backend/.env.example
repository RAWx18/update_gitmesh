# Server Configuration
PORT=8000
NODE_ENV=development

QDRANT_MODE=local
QDRANT_URL_ONLINE=https://[REDACTED]
QDRANT_API_KEY=[REDACTED]

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=[REDACTED]
GITHUB_CLIENT_SECRET=[REDACTED]
GITHUB_CALLBACK_URL=http://localhost:8000/api/v1/auth/github/callback

# GTM_GITHUB_TOKEN=[REDACTED]

ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://localhost:8000

# JWT Configuration
JWT_SECRET=[REDACTED]
JWT_EXPIRES_IN=7d

# Database Configuration (Local JSON storage)
DB_PATH=./data/beetle_db.json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

GEMINI_API_KEY=[REDACTED]

# Cache Configuration
CACHE_TTL=3600

QDRANT_URL=localhost
QDRANT_PORT=6333

# AI Pipeline Settings
AI_MAX_DOCUMENTS=1000
AI_BATCH_SIZE=32
AI_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
AI_CHAT_MODEL=gemini-2.0-flash

# AI Web Scraper Settings
AI_MAX_PAGES=10
AI_MAX_DEPTH=2
AI_SCRAPER_TIMEOUT=30000

# AI Format Agent Settings
AI_MIN_CONTENT_LENGTH=50
AI_MAX_CONTENT_LENGTH=100000
AI_REMOVE_HTML=true
AI_DETECT_LANGUAGE=true
AI_GENERATE_SUMMARY=true

# AI Embedding Settings
AI_COLLECTION_NAME=documents

# AI Retrieval Settings
AI_USE_HYBRID_SEARCH=true
AI_KEYWORD_WEIGHT=0.3
AI_VECTOR_WEIGHT=0.7

# AI Prompt Rewriter Settings
AI_MAX_CONTEXT_LENGTH=4000
AI_MAX_SOURCES=5
AI_INCLUDE_CITATIONS=true
AI_INCLUDE_CONFIDENCE=true

# AI Answering Settings
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_TOP_K=40

PYTHON_SERVER=http://localhost:8000

# ========================
# REDIS CACHE CONFIGURATION
# ========================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# ========================
# CACHE TTL CONFIGURATION
# ========================
# File content cache TTLs (in seconds)
FILE_CONTENT_TTL=3600
FILE_METADATA_TTL=7200
GITHUB_API_TTL=1800

# Embedding cache TTLs (in seconds)
EMBEDDING_TTL=86400
CHUNK_EMBEDDING_TTL=86400
BATCH_EMBEDDING_TTL=86400

# Query result cache TTLs (in seconds)
QUERY_RESULT_TTL=1800
SEMANTIC_QUERY_TTL=3600
CONTEXT_CACHE_TTL=7200

# Session cache TTLs (in seconds)
SESSION_TTL=3600
SESSION_CONTEXT_TTL=7200
USER_PREFERENCES_TTL=86400

# ========================
# LOCAL CACHE CONFIGURATION
# ========================
LOCAL_CACHE_DIR=./cache
LOCAL_CACHE_MAX_SIZE=1073741824
LOCAL_CACHE_CLEANUP_INTERVAL=3600

# ========================
# MEMORY CACHE CONFIGURATION
# ========================
MEMORY_CACHE_MAX_SIZE=1000
MEMORY_CACHE_TTL=300

# ========================
# COMPRESSION CONFIGURATION
# ========================
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1048576
COMPRESSION_ALGORITHM=gzip

# ========================
# DEDUPLICATION CONFIGURATION
# ========================
DEDUPLICATION_ENABLED=true
SEMANTIC_SIMILARITY_THRESHOLD=0.95
HASH_DEDUPLICATION_ENABLED=true

# ========================
# CHUNKING CONFIGURATION
# ========================
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=2000
MIN_CHUNK_SIZE=100

# Language-specific chunking
PYTHON_CHUNK_SIZE=800
JAVASCRIPT_CHUNK_SIZE=1000
JAVA_CHUNK_SIZE=1200
MARKDOWN_CHUNK_SIZE=1500
CONFIG_CHUNK_SIZE=500

# ========================
# ERROR HANDLING CONFIGURATION
# ========================
MAX_RETRIES=3
RETRY_DELAY=1.0
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# ========================
# MONITORING CONFIGURATION
# ========================
CACHE_METRICS_ENABLED=true
CACHE_METRICS_INTERVAL=300
CACHE_HEALTH_CHECK_INTERVAL=60

# ========================
# SECURITY CONFIGURATION
# ========================
CACHE_ENCRYPTION_ENABLED=false
CACHE_ENCRYPTION_KEY=
CACHE_ACCESS_LOGGING=true

# ========================
# PERFORMANCE CONFIGURATION
# ========================
BACKGROUND_PROCESSING_ENABLED=true
PARALLEL_PROCESSING_WORKERS=4
BATCH_PROCESSING_SIZE=10
STREAMING_ENABLED=true

# ========================
# CONTEXT MANAGEMENT CONFIGURATION
# ========================
MAX_CONTEXT_FILES=50
MAX_CONTEXT_TOKENS=100000
CONTEXT_WINDOW_SIZE=10
CONTEXT_RELEVANCE_THRESHOLD=0.7
